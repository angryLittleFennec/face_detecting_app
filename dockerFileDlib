FROM ubuntu:24.04

WORKDIR /app

COPY requirements.txt .

RUN apt-get update
RUN apt-get install -y  cmake python3-pip

RUN pip install dlib --break-system-packages

RUN pip install --no-cache-dir -r requirements.txt --break-system-packages

COPY app/ .

EXPOSE 8000

CMD ["uvicorn", "face_recognition:app", "--host", "0.0.0.0", "--port", "8000"]
